<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="queueConnectionFactory" class="org.apache.activemq.spring.ActiveMQConnectionFactory">
        <!-- ActiveMQ默认是61616端口 -->
        <property name="brokerURL" value="tcp://192.168.13.46:61616"/>
        <property name="useAsyncSend" value="true"/>
    </bean>


    <!-- 点对点消息目的地 -->
    <bean id="queueDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <!-- 名称可以随意命名 -->
        <constructor-arg value="MY.localQueue"/>
    </bean>


    <!-- PTP jms模板 -->
    <bean id="queueJmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory">
            <bean class="org.springframework.jms.connection.CachingConnectionFactory">
                <property name="targetConnectionFactory" ref="queueConnectionFactory"/>
            </bean>
        </property>
        <property name="defaultDestination" ref="queueDestination"/>
        <!-- 是否是发布订阅模式 -->
        <property name="pubSubDomain" value="false"/>
        <property name="receiveTimeout" value="600"></property>

        <!-- 消息转换器.适应于【消费者messageReceiver】和【消费者messageReceiver2】，不适应于【消费者messageReceiver3】，messageReceiver3需要通过配置指定消息转换器 -->
        <!-- 消息如果被messageReceiver和messageReceiver2接收到了，则首先会进行消息的转换，如果messageReceiver3没有指定消息转换器，则不会进行消息的转换，即使这里配置了转换器，也是没有效果的，优先级不高. -->
        <property name="messageConverter" ref="activeMQMessageConverter"/>
    </bean>


    <!-- 消息转换器 -->
    <bean id="activeMQMessageConverter" class="com.wqzhang.converter.ActiveMessageConverter"/>


    <!-- 消息消费者1 ， 实现了MessageListener接口 -->
    <bean id="messageReceiver" class="com.wqzhang.receiver.QueueConsumerA"/>
    <!-- 消息消费者2 ， 实现了MessageListener接口 -->
    <bean id="messageReceiverB" class="com.wqzhang.receiver.QueueConsumerB"/>
    <bean id="queueReceiverC" class="com.wqzhang.receiver.QueueConsumerC"/>

    <!--消息消费者3 ，与消费者1、2有些不同，这里是通过配置，指定消息转换器的功能-->
    <bean id="messageReceiver3" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
        <!--配置监听者 对象-->
        <constructor-arg ref="queueReceiverC"/>
        <!--配置装换后 调用的方法-->
        <property name="defaultListenerMethod" value="reciver"/>
        <!--转换方法-->
        <property name="messageConverter" ref="activeMessageConverter"/>
    </bean>

    <!--消息监听容器 1 -->
    <bean id="listenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="queueConnectionFactory"/>
        <property name="destination" ref="queueDestination"/>
        <!-- 指定消息消费者 -->
        <property name="messageListener" ref="messageReceiver"/>
        <!--消费者数量-->
        <property name="concurrentConsumers" value="5"/>
    </bean>

    <!-- 消息监听容器 1 -->
    <bean id="listenerContainerB" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="queueConnectionFactory"/>
        <property name="destination" ref="queueDestination"/>
        <!-- 指定消息消费者 -->
        <property name="messageListener" ref="messageReceiverB"/>
        <!--消费者数量-->
        <property name="concurrentConsumers" value="5"/>
    </bean>

    <!--&lt;!&ndash; 消息监听容器 1 &ndash;&gt;-->
    <bean id="listenerContainerC" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="queueConnectionFactory"/>
        <property name="destination" ref="queueDestination"/>
        <!-- 指定消息消费者 -->
        <property name="messageListener" ref="messageReceiver3"/>
        <!--消费者数量-->
        <property name="concurrentConsumers" value="5"/>
    </bean>
</beans>